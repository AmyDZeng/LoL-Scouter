<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DisplayInfoActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_icon" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_icon"
        android:id="@+id/win_rate"
        android:text="Win rate: "
        android:textColor="@color/white"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/win_rate"
        android:id="@+id/pick_rate"
        android:text="Pick rate: "
        android:textColor="@color/white"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pick_rate"
        android:id="@+id/strong_against"
        android:text="Strong against: "
        android:paddingTop="32dp"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:paddingLeft="8dip"
        android:paddingRight="16dip"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pick_rate"
        android:id="@+id/weak_against"
        android:text="Weak against: "
        android:paddingTop="32dp"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:paddingLeft="8dip"
        android:paddingRight="16dip"
        />


</LinearLayout>